@model TNT_express.Models.shedule

@{
    ViewBag.Title = "e_Shedule";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-body">

    <h2>Edit Shedule</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>shedule</h4>
            <hr />
            @Html.HiddenFor(model => model.shedule_id)

            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownList("bus_id", null, htmlAttributes: new { placeholder = "Edit Bus Id", @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.travel_date, new { placeholder = "Edit travel date", htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.departure, new { htmlAttributes = new { placeholder = "Edit Departue", @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.destination, new { htmlAttributes = new { placeholder = "Edit Destination", @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.duration, new { htmlAttributes = new { placeholder = "Edit Duration", @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</div>