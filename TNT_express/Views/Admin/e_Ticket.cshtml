@model TNT_express.Models.ticket

@{
    ViewBag.Title = "e_Ticket";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-body">

    <h2>Edit Ticket</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>ticket</h4>
            <hr />
            @Html.HiddenFor(model => model.ticket_Id)

            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownList("schedule_id", null, htmlAttributes: new { placeholder = "Edit Shedule Id", @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownList("user_id", null, htmlAttributes: new { placeholder = "Edit User Id", @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.no_seat, new { placeholder = "Edit Seats No", htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fare, new { placeholder = "Edit Total Fare", htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>